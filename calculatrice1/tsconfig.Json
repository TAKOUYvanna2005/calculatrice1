{
    "compilerOptions": {
      "target": "ES6",                  
      "module": "commonjs", 
      "strict": true,
      "esModuleInterop": true,           
      "rootDir": "./scripts",          
      "outDir": "./dist",                
      "noImplicitAny": true,             
      "forceConsistentCasingInFileNames": true, 
      "skipLibCheck": true              
    },
    "include": ["scripts/**/*"],         
    "exclude": ["node_modules", "dist"]  
  }
  